<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="horizontal"
    android:weightSum="1">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/landscapeUsersFragment"
        android:name="com.space_intl.chatapp.presentation.ui.users.fragment.UsersFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        tools:layout="@layout/fragment_users" />

    <View
        android:layout_width="@dimen/dimen_1_dp"
        android:layout_height="match_parent"
        android:background="@color/yellow" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainContainer"
        android:name="com.space_intl.chatapp.presentation.ui.chat.fragment.ChatFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        tools:layout="@layout/fragment_chat" />

</LinearLayout>
