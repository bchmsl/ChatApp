<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Widget.AppCompat.TextView.MessageTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bubble</item>
        <item name="android:maxWidth">@dimen/dimen_250_dp</item>
        <item name="android:padding">@dimen/dimen_16_dp</item>
        <item name="android:textColor">@color/neutral_01</item>
        <item name="android:textSize">@dimen/dimen_14_sp</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.TimeDeliveredTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/neutral_02</item>
        <item name="android:textSize">@dimen/dimen_8_sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.MessageTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_28_dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_28_dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_28_dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_28_dp</item>
        <item name="boxStrokeWidth">@dimen/dimen_1_dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextInputEditText.MessageTextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:maxLines">5</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColorHint">@color/neutral_02</item>
        <item name="android:textSize">@dimen/dimen_14_sp</item>
    </style>


</resources>