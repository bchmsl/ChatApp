<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_25_dp"
        android:paddingVertical="@dimen/dimen_16_dp"
        android:textSize="@dimen/dimen_18_sp"
        tools:text="@tools:sample/first_names" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="@dimen/dimen_16_dp"
        android:background="@color/neutral_02_dark_grey" />

</androidx.appcompat.widget.LinearLayoutCompat>
