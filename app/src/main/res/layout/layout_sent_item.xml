<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16_dp"
    android:layout_marginTop="@dimen/dimen_20_dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCircleSmall"
        android:layout_width="@dimen/dimen_10_dp"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_marginBottom="@dimen/dimen_19_dp"
        android:src="@drawable/circle"
        android:tint="@color/bubble_sent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCircleBig"
        android:layout_width="@dimen/dimen_18_dp"
        android:layout_height="@dimen/dimen_0_dp"
        android:src="@drawable/circle"
        android:tint="@color/bubble_sent"
        app:layout_constraintBottom_toTopOf="@id/ivCircleSmall"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/ivCircleSmall" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMessage"
        style="@style/Base.Widget.AppCompat.TextView.MessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_3_dp"
        android:backgroundTint="@color/bubble_sent"
        app:layout_constraintBottom_toBottomOf="@id/ivCircleBig"
        app:layout_constraintEnd_toEndOf="@id/ivCircleBig"
        tools:text="გამარჯობა ზეზვა!" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        style="@style/Base.Widget.AppCompat.TextView.TimeDeliveredTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_5_dp"
        app:layout_constraintEnd_toEndOf="@id/tvMessage"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        tools:ignore="SmallSp"
        tools:text="დღეს 16:12" />

</androidx.constraintlayout.widget.ConstraintLayout>